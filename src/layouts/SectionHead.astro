---
import { cn } from "@/lib/utils";

interface Props {
	class?: string;
}

const { class: className } = Astro.props;
---

<div
	class={cn(
		"sectionHead grid gap-4 md:gap-5 lg:gap-0 items-start justify-between ~pt-8/52 w-full",
		className,
	)}>
	<div
		class="col-[2] row-start-1 ml-auto flex whitespace-nowrap text-[0.65rem] font-normal uppercase leading-7 text-muted-foreground md:text-xs lg:col-[1] lg:ml-0">
		<slot name="label" />
	</div>
	<header
		class="sectionHeadTitle row-start-1 flex text-lg sm:text-2xl md:text-4xl lg:mx-auto lg:-mt-2">
		<h2>
			<slot name="title" />
		</h2>
	</header>

	<div
		class="sectionHeadDesc col-span-2 col-start-1 flex flex-1 text-sm leading-[1.4] text-muted-foreground sm:col-span-1 md:leading-[1.8] lg:col-start-3 lg:text-base lg:leading-[1.8]">
		<slot name="description" />
	</div>

	<slot />
</div>

<style is:global>
	.sectionHead {
		grid-template-columns: minmax(auto, 65vw) min-content;
	}
	@media screen and (min-width: 64rem) {
		/* lg, 1024px */
		.sectionHead {
			grid-template-columns: 5vw minmax(auto, 31vw) minmax(auto, 45vw);
		}
	}
	@media screen and (min-width: 160rem) {
		/* 3xl, 2560px */
		.sectionHead {
			grid-template-columns: 5vw minmax(auto, 20vw) minmax(auto, 40vw);
		}
	}
</style>
