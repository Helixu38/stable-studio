<li role="button" tabindex="0" class="faqSection 3xl:py-18 bg-background !~py-4/12">
	<div
		class="col-span-1 col-start-1 row-span-2 row-start-1 flex flex-col lg:col-span-2 lg:col-start-2 lg:row-span-1 lg:row-start-1 lg:-mt-[2px]">
		<h2
			class="faqSectionHeader text-sm leading-[1.4] text-primary md:text-base md:leading-[1.8] 3xl:text-xl">
			<slot name="title" />
		</h2>
		<div
			class="serviceContent w h-0 overflow-hidden text-sm leading-[1.4] text-muted-foreground md:leading-[1.8] lg:col-start-3 lg:text-base lg:leading-[1.8] 3xl:text-xl 3xl:leading-[2]">
			<p class="pt-4 md:pt-5">
				<slot name="description" />
			</p>
		</div>
	</div>
</li>
<style is:global>
  .serviceContent {
    will-change: height;
  }
</style>
<script>
	import gsap from "gsap";

	const faqSection = gsap.utils.toArray(".faqSection") as HTMLElement[];
	faqSection.forEach((faq) => {
		faq.addEventListener("click", () => {
			const serviceContent = faq.querySelector(".serviceContent");
			if (!serviceContent) return;
      const open = getComputedStyle(serviceContent).height === "0px";
			gsap.to(serviceContent, {
				height: () =>{
					return open ? "auto" : '0'
        },
        opacity: open ? 1 : 0,
				duration: 0.7,
				ease: "power4.out",
				overwrite: true,
			});
		});
	});
</script>
