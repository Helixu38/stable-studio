---
import SectionHead from "@/layouts/SectionHead.astro";
import ServiceSectionAnimation from "./ServiceSectionAnimation.astro";

import * as m from "@/paraglide/messages";
---

<!-- service section -->
<section id="service" aria-describedby="serviceSectionDescription">
	<SectionHead class="sectionHeadAnimated">
		<span slot="label">/ {m.service()} /</span>
		<span slot="title">{m.minor_teal_javelina_mop()}</span>
		<p slot="description" id="serviceSectionDescription">
			{m.busy_long_coyote_succeed()}
			<br />
			<br />
			{m.awful_full_butterfly_grip()}
		</p>
	</SectionHead>

	<div id="serviceSectionOuterContainer" class="overflow-visible">
		<ul
			id="serviceSectionContainer"
			class="~py-6/16 [&_.serviceSection]:border-t [&_.serviceSection]:border-muted-foreground/50">
			<ServiceSectionAnimation
				subServices={[
					"Static and Dynamic Websites",
					"Animations with Lottie and GSAP",
					"CMS Integration and SaaS",
					"Rapid Prototyping",
				]}>
				<span slot="label">01</span>
				<span slot="title">{m.inner_good_warthog_seek()}</span>
				<span slot="subheader">
					{m.tough_tough_anaconda_nail()}
				</span>
				<p slot="description">
					{m.equal_full_walrus_inspire()}
					<span class="italic text-flatdarkviolet">2 weeks</span>.
				</p>
			</ServiceSectionAnimation>
			<ServiceSectionAnimation
				subServices={[
					"Technical SEO Audits and Analysis",
					"On & Off-Page Optimization",
					"Ad Campaigns and Reviews",
				]}>
				<span slot="label">02</span>
				<span slot="title">{m.direct_flat_badger_bump()}</span>
				<span slot="subheader">
					{m.chunky_aloof_hornet_belong()}
				</span>
				<p slot="description">
					{m.great_suave_rabbit_leap()}
				</p>
			</ServiceSectionAnimation>
			<ServiceSectionAnimation
				subServices={["Code Refactoring", "Bug Fixing", "Optimization"]}>
				<span slot="label">03</span>
				<span slot="title">{m.big_chunky_mantis_engage()}</span>
				<span slot="subheader">{m.raw_lucky_squirrel_dart()}</span>
				<p slot="description">
					{m.key_cool_osprey_skip()}
				</p>
			</ServiceSectionAnimation>
			<ServiceSectionAnimation>
				<span slot="label">04</span>
				<span slot="title">{m.extra_lime_elephant_relish()}</span>
				<span slot="subheader">{m.good_next_bumblebee_believe()}</span>
				<p slot="description">
					{m.mushy_royal_finch_support()}
				</p>
			</ServiceSectionAnimation>
		</ul>
	</div>
</section>
